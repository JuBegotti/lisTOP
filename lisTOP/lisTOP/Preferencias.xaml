<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lisTOP.Preferencias"
             NavigationPage.HasNavigationBar="True">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="20">
                <Label x:Name="txtRest" Text="Restrições" HorizontalOptions="CenterAndExpand" FontSize="40" TextColor="Black" FontAttributes="Bold"/>
                <StackLayout x:Name="ContainerPreferencias" VerticalOptions="Center">

                </StackLayout>
                <StackLayout HorizontalOptions="CenterAndExpand">
                    <Button Image="salvar.png" Text="Salvar" Clicked="OnButtonSalvar" BackgroundColor="Black" TextColor="White" HeightRequest="50" ></Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>