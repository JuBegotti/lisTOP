<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lisTOP.ListViewUsuario"
             NavigationPage.HasNavigationBar="True">
    <ContentView.Content>
        
        <StackLayout x:Name="usuario1" IsVisible="True" Spacing="0">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" BackgroundColor="#dddddd" WidthRequest="300">
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
                    <Label WidthRequest="200" Text="Nome do Usuario" x:Name="lblNomeUsuario" FontSize="20" TextColor="Black">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnButtonVerUsuario"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
                <StackLayout Orientation="Vertical" HorizontalOptions="End" VerticalOptions="Center">
                    <Button x:Name="buttonRemoverUsuario" Clicked="OnButtonRemoverUsuario" Image="excluir.png" BackgroundColor="Black" HeightRequest="40" WidthRequest="40"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
        
    </ContentView.Content>
</ContentView>
